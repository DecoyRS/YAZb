<idea-plugin>
    <id>com.github.decoyrs.ziggij</id>
    <name>ZiggIJ</name>
    <vendor>decoyrs</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.decoyrs.ziggij.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.decoyrs.ziggij.services.MyProjectService"/>
        <fileType name="Zig File" implementationClass="com.github.decoyrs.ziggij.ZigFileType" fieldName="INSTANCE" language="Zig" extensions="zig"/>
        <lang.parserDefinition language="Zig" implementationClass="com.github.decoyrs.ziggij.language.ZigParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Zig" implementationClass="com.github.decoyrs.ziggij.language.ZigSyntaxHighlighterFactory" />
        <colorSettingsPage implementation="com.github.decoyrs.ziggij.language.ZigColorSettingsPage" />
        <completion.contributor language="Zig" implementationClass="com.github.decoyrs.ziggij.language.ZigCompletionContributor" />
<!-- Project Module -->
        <moduleType id="ZIG_EXECUTABLE_MODULE_TYPE" implementationClass="com.github.decoyrs.ziggij.projectModel.ZigExecutableModuleType"/>
        <moduleType id="ZIG_LIBRARY_MODULE_TYPE" implementationClass="com.github.decoyrs.ziggij.projectModel.ZigLibraryModuleType"/>
        <moduleBuilder
                builderClass="com.github.decoyrs.ziggij.projectModel.ZigExecutableModuleBuilder"
                id="ZIG_EXECUTABLE_STEP"
                order="first"
        />
        <moduleBuilder
                builderClass="com.github.decoyrs.ziggij.projectModel.ZigLibraryModuleBuilder"
                id="ZIG_LIBRARY_STEP"
                order="first"
        />
    </extensions>

    <applicationListeners>
        <listener class="com.github.decoyrs.ziggij.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
